class Solution {
public:
    double myPow(double x, int n) {
        long long N = n;  // To handle INT_MIN safely
        if (N < 0) {
            x = 1 / x;
            N = -N;
        }
        // myPow(2, -3) â†’ (1/2)^3 = 1/8
        double ans = 1;
        while (N > 0) {
            if (N % 2 == 1) {
                ans *= x;
            }
            x *= x;
            N /= 2;
        }
        return ans;
    }
};
