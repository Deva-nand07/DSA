class Solution {
public:
    int lengthOfLastWord(string s) {
        int count = 0, length = 0;
        for (int i = 0; i < s.size(); i++) {
            if (s[i] == ' ') {
                if (count > 0) {
                    length = count;
                    count = 0;
                }
            } else
                count++;
        }
        return (count > 0) ? count : length;
    }
};
